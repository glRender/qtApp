#version 330 core 
uniform mat4 model; 
uniform mat4 view; 
uniform mat4 projection;
uniform float r;
uniform float g;
uniform float b;
layout (location = 0) in vec3 vertex; 
layout (location = 1) in vec2 uv; 
out vec3 keyring_position; 
out vec2 keyring_uv; 
out float keyring_r; 
out float keyring_g; 
out float keyring_b; 
void main(void) 
{ 
   keyring_position = vertex; 
   keyring_uv = uv;
   keyring_r = r; 
   keyring_g = g; 
   keyring_b = b; 
   gl_Position      = projection * view * model * vec4 ( vertex.x, vertex.y, vertex.z, 1.0 ); 
}